---
const { tutorials } = Astro.props;
---

<div class="space-y-6">
  {tutorials.map((tut) => (
    <div
      class="tutorial-item flex flex-col rounded-lg bg-white dark:bg-gray-900 shadow hover:shadow-md transition md:flex-row"
      data-search={`${tut.data.title} ${tut.data.description}`}
    >
      <img
        class="h-48 w-full rounded-t-lg object-cover md:h-auto md:w-48 md:!rounded-none md:!rounded-s-lg"
        src={tut.data.image}
        alt={tut.data.title}
      />
      <div class="flex flex-col justify-between p-6">
        <div>
          <a href={`/blog/guias/${tut.slug}`}>
            <h5 class="mb-2 text-xl font-semibold text-gray-900 dark:text-gray-100 hover:text-blue-600 dark:hover:text-blue-400">
              {tut.data.title}
            </h5>
          </a>
          <p class="mb-4 text-gray-700 dark:text-gray-300"
            {tut.data.description}
          </p>
        </div>
        <p class="text-xs text-gray-500 dark:text-gray-400">
          Última actualización: {tut.data.updated}
        </p>
      </div>
    </div>
  ))}
</div>
