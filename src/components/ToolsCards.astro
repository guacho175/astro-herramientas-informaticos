---
// src/components/ToolsCards.astro
import { tools } from "../data/tools";
---

<div class="grid gap-6 sm:grid-cols-2 lg:grid-cols-3">
  {tools.map(tool => (
    <div class="tool-card bg-gray-800 rounded-lg p-5 shadow hover:shadow-lg transition" data-search={`${tool.title} ${tool.description}`}>
      <h3 class="text-xl font-semibold mb-2">{tool.emoji} {tool.title}</h3>
      <p class="text-gray-300 mb-3">{tool.description}</p>
      <a href={tool.link} target="_blank" class="text-blue-400 hover:underline">Ver herramienta</a>
    </div>
  ))}
</div>
