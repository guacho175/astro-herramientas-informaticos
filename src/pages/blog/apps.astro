---
import Layout from '../../layouts/Layout.astro';
import Categorias from '../../components/Categorias.astro';
import ToolsCards from '../../components/ToolsCards.astro';
import SearchBar from '../../components/BarraBusqueda.astro';

const title = "Aplicaciones Recomendadas | Herramientas para Informáticos";
const description = "Apps útiles para estudiantes y profesionales de informática.";
const keywords = "apps, herramientas, productividad, informática";
---

<Layout title={title} description={description} keywords={keywords}>
  <section class="py-10 w-full">
    <div class="grid grid-cols-1 lg:grid-cols-5 gap-6 w-full mb-6">

      <!-- Columna 1: Menú lateral -->
      <div class="space-y-6 col-span-1">
        <h3 class="text-2xl font-bold text-blue-400">🛠 Herramientas</h3>
        <Categorias active="apps" />
      </div>

      <!-- Columna 2-5: Buscador + tarjetas -->
      <div class="col-span-1 lg:col-span-4 space-y-4">
        <SearchBar placeholder="Buscar aplicación..." targetSelector=".tool-card" />
        <ToolsCards />
      </div>

    </div>
  </section>
</Layout>
