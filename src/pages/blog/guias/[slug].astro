---
import Layout from "../../../layouts/Layout.astro";
import { getCollection } from "astro:content";
import type { CollectionEntry } from "astro:content";

// Generamos las rutas din√°micas
export async function getStaticPaths() {
  const tutorials = await getCollection("tutorials");
  return tutorials.map((tut: CollectionEntry<"tutorials">) => ({
    params: { slug: tut.slug },
    props: { tutorial: tut as CollectionEntry<"tutorials"> },
  }));
}

// Tipar expl√≠citamente las props para evitar el error de 'never'
const { tutorial } = Astro.props as { tutorial: CollectionEntry<"tutorials"> };
const { Content } = await tutorial.render();
---

<Layout title={tutorial.data.title} description={tutorial.data.description}>
  <main class="mt-20">
    <!-- Secci√≥n principal con imagen y detalles -->
    <section class="max-w-5xl mx-auto px-4 py-12 grid md:grid-cols-2 gap-10 items-start">
      
      <!-- Columna izquierda -->
      <div class="space-y-6">
        <img 
          src={tutorial.data.image} 
          alt={tutorial.data.title}
          class="rounded-2xl shadow-lg w-full object-cover h-auto max-h-[400px]" 
        />
        <a 
          href="/blog/guias" 
          class="inline-block text-sm font-medium text-blue-600 dark:text-blue-400 hover:underline"
        >
          ‚Üê Volver a todas las gu√≠as
        </a>
      </div>

      <!-- Columna derecha -->
      <div>
        <h1 class="text-4xl font-bold text-gray-900 dark:text-gray-100 mb-4 text-center md:text-left">
          {tutorial.data.title}
        </h1>
        <p class="text-gray-700 dark:text-gray-300 mb-4">
          {tutorial.data.description}
        </p>
        <p class="text-gray-600 dark:text-gray-400 text-sm mb-2">
          <strong>üìÖ √öltima actualizaci√≥n:</strong> {tutorial.data.updated}
        </p>
        <p class="text-gray-600 dark:text-gray-400 text-sm mb-2">
          <strong>‚úçÔ∏è Autor:</strong> Christian Gal√≠ndez
        </p>
      </div>
    </section>

    <!-- Contenido del tutorial en Markdown -->
    <section class="prose lg:prose-lg max-w-4xl mx-auto px-4 py-8 dark:prose-invert">
      <Content />
    </section>
  </main>
</Layout>
