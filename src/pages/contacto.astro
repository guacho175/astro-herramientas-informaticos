<BaseLayout title="Contacto" description="Formulario para contactarte conmigo.">
  <h1 class="text-3xl font-bold mb-4 text-center text-blue-400">ğŸ“¬ ContÃ¡ctame</h1>
  <form class="space-y-6 bg-gray-800 p-6 rounded-lg shadow" netlify>
    <div>
      <label class="block text-sm font-medium">Nombre</label>
      <input type="text" name="nombre" class="w-full mt-1 p-2 rounded bg-gray-700 text-white" required />
    </div>
    <div>
